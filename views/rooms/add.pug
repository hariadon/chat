extends ../layout
block content
    h1 Create new Chat Room
    form(method="post")
        fieldset.form-group
            label(for="name") Name:
                input.form-control(id="name" ,name="name",type="text" ,placeholder="enter name of chat room")
                small.text-muted Give a meaningful name to your chat room
        button.btn.btn-primary(type="submit") create new chat room
        a.btn.btn-default(href="/admin/rooms") cancel
