extends ../layout
block content
    h1 Create new Chat Room
    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(id="name", name="name", type="text", placeholder="enter name of chat room")
            label(for="info") Info:
            input.form-control(id="info", name="info", type="text", placeholder="enter some information")
            small.text-muted Provide some information about your chat room
        .btn-panel
            button.col-lg-3.btn.send-message-btn(type='submit', role='button')
                i.glyphicon.glyphicon-plus-sign
                |  Create
            a.col-lg-4.text-right.btn.send-message-btn.pull-right(href='/admin/rooms', role='button')
                i.glyphicon.glyphicon-backward
                |  Cancel

