extends ../layout
block content
    h1 Update the Chat Room
    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(id="name", name="name", type="text", value=room.name)
            label(for="info") Info:
            input.form-control(id="info", name="info", type="text", value=room.info||"")
            small.text-muted Provide some information about your chat room
        .btn-panel
            button.col-lg-3.btn.send-message-btn(type='submit', role='button')
                i.glyphicon.glyphicon-circle-arrow-right
                |  Save
            a.col-lg-4.text-right.btn.send-message-btn.pull-right(href='/admin/rooms', role='button')
                i.glyphicon.glyphicon-backward
                |  Cancel
