extends ../layout
block content
    h1 Update the Chat Room
    form(method="post")
        fieldset.form-group
            label(for="name") Name:
                input.form-control(id="name" ,name="name",type="text" ,value=room.name)
                small.text-muted Give a meaningful name to your chat room
        button.btn.btn-primary(type="submit") save chat room
        a.btn.btn-default(href="/admin/rooms") cancel