extends ../layout
block content
    h1 Create new User
    form(method="post")
        fieldset.form-group
            label(for="name") Name:
                input.form-control(name="name",type="text" ,placeholder="enter name of the user")
            label(for="role") Role:
                input.form-control(name="admin",type="checkbox")
                input.form-control(name="moderator",type="checkbox")
            label(for="mobile") Mobile:
                input.form-control(name="mobile",type="text" ,placeholder="enter ten digit mobile number")
            label(for="email") Email:
                input.form-control(name="email",type="text" ,placeholder="enter a valid email id")
            label(for="address") Address:
                textarea.form-control(name="address" rows="2")
            label(for="city") City:
                input.form-control(name="city",type="text" )
            label(for="state") State:
                input.form-control(name="state",type="text")
            label(for="pincode") Pin Code:
                input.form-control(name="pincode",type="text" )
        button.btn.btn-primary(type="submit") create
        a.btn.btn-default(href="/admin/users") cancel