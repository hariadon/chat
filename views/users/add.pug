extends ../layout
block content
    h1 Create new User
    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(name="name", id="name", type="text", value="")
            label(for="password") Password:
            input.form-control(name="password", id="password", type="text", value="")
            .form-check
                label.form-check-label
                    input.form-check-input(type='checkbox', name="roles", value='admin')
                    |    Admin
            .form-check
                label.form-check-label
                    input.form-check-input(type='checkbox', name="roles", value='user' checked)
                    |     User
            label(for="mobile") Mobile:
            input.form-control(name="mobile", id="mobile", type="text", value="")
            label(for="email") Email:
            input.form-control(name="email", id="email", type="text", value="")
            label(for="address") Address:
            textarea.form-control(name="address", id="address", rows="2")
            label(for="city") City:
            input.form-control(name="city", id="city", type="text", value="" )
            label(for="state") State:
            input.form-control(name="state", id="state" type="text", value="")
            label(for="pincode") Pin Code:
            input.form-control(name="pincode", id="pincode", type="text", value="")
        .btn-panel
            button.col-lg-3.btn.send-message-btn(type='submit', role='button')
                i.glyphicon.glyphicon-plus-sign
                |  Create
            a.col-lg-4.text-right.btn.send-message-btn.pull-right(href='/admin/users', role='button')
                i.glyphicon.glyphicon-backward
                |  Back
