extends ../layout
block content
    h1 Create new User
    form(method="post")
        fieldset.form-group
            label(for="name") Name:
            input.form-control(name="name", id="name", type="text", value="")
            label Roles:
            .form-check
                label.form-check-label
                    input.form-check-input(type='checkbox', name="roles", value='admin') Admin
            .form-check
                label.form-check-label
                    input.form-check-input(type='checkbox', name="roles", value='user') User
            label(for="mobile") Mobile:
            input.form-control(name="mobile", id="mobile", type="text", value="")
            label(for="email") Email:
            input.form-control(name="email", id="email", type="text", value="")
            label(for="address") Address:
            textarea.form-control(name="address", id="address", rows="2", value="")
            label(for="city") City:
            input.form-control(name="city", id="city", type="text", value="" )
            label(for="state") State:
            input.form-control(name="state", id="state" type="text", value="")
            label(for="pincode") Pin Code:
            input.form-control(name="pincode", id="pincode", type="text", value="")
        button.btn..btn-default.btn-primary(type="submit") create
        a.btn.btn-default(href="/admin/users") cancel