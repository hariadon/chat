extends ../layout
block content
    h1 Update User
    form(method="post")
        fieldset.form-group
            label(for="name") Name:
                input.form-control(name="name",type="text" ,value="#{user.name||''}")
            label(for="role") Role:
                input.form-control(name="admin",type="checkbox")
                input.form-control(name="moderator",type="checkbox")
            label(for="mobile") Mobile:
                input.form-control(name="mobile",type="text" ,value="#{user.mobile||''}")
            label(for="email") Email:
                input.form-control(name="email",type="text", value="#{user.email||''}")
            label(for="address") Address:
                textarea.form-control(name="lines", rows="2", value="#{user.lines||''}")
            label(for="city") City:
                input.form-control(name="city",type="text", value="#{user.city||''}" )
            label(for="state") State:
                input.form-control(name="state",type="text", value="#{user.state||''}")
            label(for="pincode") Pin Code:
                input.form-control(name="pincode",type="text", value="#{user.pincode||''}")
        button.btn.btn-primary(type="submit") save
        a.btn.btn-default(href="/admin/users") cancel